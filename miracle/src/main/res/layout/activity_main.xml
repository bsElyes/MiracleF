<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:background="#4a0a4a">

   
    
    
    
    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_magasin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="magasins"
        android:text="@string/action_magasins"
        android:textColor="#ffffff"
        android:background="#000000" 
        android:layout_marginTop="100dp"/>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_mycard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_magasin"
        android:onClick="mycard"
        android:text="@string/action_my_card" 
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginTop="10dp" />

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_videos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_mycard"
        android:onClick="videos"
        android:text="@string/action_videos" 
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_marginTop="10dp"/>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_shop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_videos"
        android:onClick="shopping"
        android:text="@string/action_shopping"
        android:textColor="#ffffff"
        android:background="#000000" 
        android:layout_marginTop="10dp"/>


</RelativeLayout>